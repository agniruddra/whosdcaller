    <script type="text/javascript">
                    $('.search_q').click(function() {
                        var phn = document.getElementById("phone").value;
                        var q = "/search/"+phn;
                        $.ajax({
                        type: "POST",
                        url:q,
                        success:function(data){
                                var txt = "";
                                var std = "<thead><tr><th>Name</th><th>Address</th><th>Phone</th><th>Email</th></tr></thead>";
                                if(data.data.length){
                                 for(var i = 0;i < data.data.length;i++) {
                                     txt+=std+"<tbody><tr><td>"+data.data[i].name+"</td><td>"+data.data[i].address+"</td><td>"+data.data[i].phone+"</td><td>"+data.data[i].email+"</td></tr></tbody>"
                                 }
                                }else{
                                    txt="<tr><td>No Records Found!!</td></tr>"
                                }
                                if(txt != ""){
                                    $("#result").html(txt);
                                }
                                }
                        });
                    });
    </script>
    
    
